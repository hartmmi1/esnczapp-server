{form universityForm}
	<input n:name="id" value="{$uni ? $uni->getId()}">
	<div class="form-group">
		<label class="form-control-label">Name</label>
		<input class="form-control" n:name="name" value="{$uni ? $uni->getName()}">
	</div>
	<div class="form-group">
		<label class="form-control-label">City</label>
		{input city}
	</div>
	<div class="form-group">
		<input n:name="save" class="btn btn-success">
	</div>
{/form}